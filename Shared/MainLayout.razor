@using MudBlazor.Utilities
@inherits LayoutComponentBase

<PageTitle>SitServerController</PageTitle>

<MudThemeProvider Theme="TarkovTheme"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Style="font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif">
    <MudAppBar Elevation="0" Style="background: #191919; color: #bebebe">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1" Style="background: #191919; color: #bebebe">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">SIT Server Controller</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="my-2 pt-2">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
    
    MudTheme TarkovTheme = new()
    {
        Palette = new PaletteDark()
        {
            Background = new MudColor("#0a0a0a"),
            Dark = new MudColor("#0a0a0a"),
            Primary = new MudColor("#968867"),
            Secondary = new MudColor("#121212")

        }
    };
}
}